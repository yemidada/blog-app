<main class="card">
  <div class="card-content">
    <div class="user-image border"></div>
    <div class="user-data border full-width">
      <h1>
        <%= @user.name %>
      </h1>
      <p class="number-posts">Number of posts: <%= @user.posts_counter %>
      </p>
    </div>
  </div>


  <div class="bio border">

    <h5>Bio:</h5>
    <p>
      <%= @user.bio %>
    </p>

  </div>

  <div>
    <ul>

      <% @user.recent_posts.each do |post| %>
        <%= link_to controller: 'posts' , action: 'show' , user_id: @user.id, id: post.id do %>
          <li class="border comment">
            <h5>
              <%= post.title%>
            </h5>
            <h6>
              <%= post.text%>
            </h6>
            <div class="right">
              <span>Comments: <%= post.comments_counter %></span>
              <span class="left">Likes: <%= post.likes_counter %> </span>
            </div>
          </li>
          <% end %>
       <% end %>
    </ul>
    <div class="full-width d-flex justify-content-center">
      <div class="btn">
        <%= link_to "See all posts" , controller: 'posts' , action: 'index' , user_id: @user.id %>
      </div>
    </div>

  </div>
</main>